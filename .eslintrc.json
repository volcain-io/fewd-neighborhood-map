{
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "plugins": ["prettier"],
    "rules": {
        "arrow-parens": ["error", "as-needed"],
        "no-use-before-define": ["error", {
            "classes": false
        }],
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "single"],
        "no-underscore-dangle": ["error", {
            "allow": ["_load"]
        }],
        "no-param-reassign": ["error", {
            "props": false
        }]
    }
}
